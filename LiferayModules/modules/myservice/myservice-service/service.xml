<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.liferay.exercise">
	<namespace>MLP</namespace>
	<entity name="Product" local-service="true" remote-service="true">

		<column name="productId" type="long" primary="true" />
		<column name="name" type="String" />
		<column name="type" type="String" />
		<column name="description" type="String" />
		<column name="sku" type="String" />
		<column name="price" type="double" />

		<!-- Audit fields -->
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<order by="asc">
			<order-column name="name" />
		</order>

	</entity>
</service-builder>